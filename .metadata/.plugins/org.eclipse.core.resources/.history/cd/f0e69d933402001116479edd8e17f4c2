import java.util.Locale;
import java.util.Scanner;

public class exercicio_Eight {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		try(Scanner sc = new Scanner(System.in)){
			int rest = 0;
			int rest8 = 0;
			int rest18 = 0;
			int rest28 = 0;
			int number;
			int isento = 0;
			int oito = 0;
			int dezoito = 0;
			int vinteoito = 0;
			int imposto;
			System.out.println("Valor para calcular o imposto de renda");
			number = sc.nextInt();
			
			if(number >= 0) {
				rest = number - 2000;
				System.out.println(rest);
			}
			if(rest >= 2000.01) {
				oito = (8/100) * 1000;
				rest8 = rest - 1000;
			}
			if(rest8 >= 3000.01) {
				dezoito = (18/100) * 1500;
			}
			imposto = oito + dezoito + vinteoito;
			System.out.println("Valor a ser pago: " + imposto);
		}
	}
}
