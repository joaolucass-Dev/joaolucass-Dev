import java.util.Locale;
import java.util.Scanner;

public class exercicio_eleven {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		try(Scanner sc = new Scanner(System.in)) {
			System.out.println("São quantos alunos?");
			int alunos = sc.nextInt();;
			sc.nextLine();
			System.out.println("=======Calculo de notas=======");
			for (int i = 1; i <=alunos; i++) {
				System.out.println("\n--- Avaliando Aluno " + i + " ---"); // Usa o 'i' aqui!
				
				 // Comando para limpar o console
			    System.out.print("\033[H\033[2J");
			    System.out.flush();
				
				System.out.println("What grade did this student get in the first semester?");
				double first = sc.nextDouble();
				
				
				
				System.out.println("What grade did this student get in the second semester?");
				double second = sc.nextDouble();
				
				
				double total = first + second;
				
				if (total > 60) {
					System.out.printf("GREAT!! You passed. Grade %.2f%n", total);
				}
				else if(total >= 40 && total <= 60) {
					System.out.println("OH NO!! You are Recuperation " + total);
				}
				else {
					System.out.println("OH NO!! You not passed grade. Repeat again in next year!! " + total);
				}
				
			}
			
			
		} catch (Exception e) {
			// TODO: handle exception
		}
	}

	public static void limparConsole() {
	    try {
	        final String os = System.getProperty("os.name");
	        if (os.contains("Windows")) {
	            new ProcessBuilder("cmd", "/c", "cls").inheritIO().start().waitFor();
	        } else {
	            new ProcessBuilder("clear").inheritIO().start().waitFor();
	        }
	    } catch (final Exception e) {
	        // Tratar exceções
	    }
	}

	
}
