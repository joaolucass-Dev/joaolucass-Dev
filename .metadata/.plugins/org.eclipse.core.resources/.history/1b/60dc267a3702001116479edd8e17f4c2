import java.util.Locale;
import java.util.Scanner;

public class exercicio_Eight {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		try(Scanner sc = new Scanner(System.in)){
			double number = sc.nextDouble();
			double impostoTotal = 0;
			double restante = number;

			// 1. Tira a parte isenta
			if (restante > 2000) {
			    restante = restante - 2000; // Aqui o 'restante' é o que sobra pra taxar
			    
			    // 2. Cobra os próximos 1000 reais (faixa dos 8%)
			    if (restante <= 1000) {
			        impostoTotal += restante * 0.08;
			        restante = 0;
			    } else {
			        impostoTotal += 1000 * 0.08;
			        restante -= 1000;
			    }

			    // 3. Cobra os próximos 1500 reais (faixa dos 18%)
			    if (restante > 0) {
			        if (restante <= 1500) {
			            impostoTotal += restante * 0.18;
			            restante = 0;
			        } else {
			            impostoTotal += 1500 * 0.18;
			            restante -= 1500;
			        }
			    }
			    
			    // 4. O que sobrar agora é 28%
			    if (restante > 0) {
			        impostoTotal += restante * 0.28;
			    }
			}
		}
	}
}
