import java.util.Scanner;

public class exercicio_five {
	public static void main(String[] args) {
		System.out.println("================================");
		try (Scanner sc = new Scanner(System.in)) {
			int escolha;
			int quantidade;
			double cachorro = 4.00, xsalada = 4.50, xbacon = 5.00, torrada = 2.00, refri = 1.50;
			IO.println("Cardapio de hoje:");
			IO.println("1: Cachorro Quente -- R$ 4.00");
			IO.println("2: X-Salada -- R$ 4.50");
			IO.println("3: X-Bacon -- R$ 5.00");
			IO.println("4: Torrada Simples -- R$ 2.00");
			IO.println("5: Refrigerante -- R$ 1.50");
			IO.println("");
			IO.println("Escolha um numero de 1 a 5 ");
			escolha = sc.nextInt();

			switch (escolha) {
			case 1:
				System.out.println("Quantos Cachorro quente vc deseja?");
				quantidade = sc.nextInt();
				total(sc, quantidade, cachorro);
				break;

			case 2:
				System.out.println("Quantos X-Salada vc deseja?");
				quantidade = sc.nextInt();
				total(sc, quantidade, xsalada);
				break;

			case 3:
				System.out.println("Quantos X-Bacon vc deseja?");
				quantidade = sc.nextInt();
				total(sc, quantidade, xbacon);
				break;

			case 4:
				System.out.println("Quantos Torrada Simples vc deseja?");
				quantidade = sc.nextInt();
				total(sc, quantidade, torrada);
				break;

			case 5:
				System.out.println("Quantos Refrigerante vc deseja?");
				quantidade = sc.nextInt();
				total(sc, quantidade, refri);
				break;
			}
		}
	}

	public static void total(Scanner sc, int count, double choice) {
		System.out.println("O total fica: " + count * choice);
		confirm(sc);
	}

	public static void confirm(Scanner sc) {
		int process;
		System.out.println("Deseja prosseguir?");
		System.out.println("1 - Sim");
		System.out.println("2 - Não");
		process = sc.nextInt();
		if (process == 1) {
			System.out.println("Obg Pela Preferencia, Aguarde algumas horas.. amanhã eu entrego");
			System.out.println("================================");
		} else if (process == 2) {
			System.out.println("Tudo Bem, muito obg!");
		}

	}
}
