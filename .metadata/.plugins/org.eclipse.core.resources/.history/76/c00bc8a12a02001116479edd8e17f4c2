import java.util.Locale;
import java.util.Scanner;

public class exercicio_Eight {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		try(Scanner sc = new Scanner(System.in)){
			int rest = 0;
			int number;
			int imposto;
			System.out.println("Valor para calcular o imposto de renda");
			number = sc.nextInt();
			
			if(number >= 0 && number <= 2000.00) {
				rest = number - 2000;
				
			}
			else if(rest >= 2000.01 && rest <= 3000.00) {
				imposto = 8%1000;
				rest = rest - 1000;
			}
			else if(rest >= 3001.00 && rest <= 4500.00) {
				rest = rest - 1500;
				
			}
			
			
		}
	}
}
