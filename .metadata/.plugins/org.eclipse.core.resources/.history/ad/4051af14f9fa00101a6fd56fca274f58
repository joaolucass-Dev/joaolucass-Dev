import java.util.Locale;
import java.util.Scanner;

public class six {
	void main (String[] args) {
		try(Scanner sc = new Scanner(System.in)){
			Locale.setDefault(Locale.US);
			float A, B, C;
			
			System.out.println("---------Calculos Float---------");
			System.out.println("A: ");
			A = sc.nextFloat();
			
			System.out.println("B: ");
			B = sc.nextFloat();
			
			System.out.println("C: ");
			C = sc.nextFloat();
			
			
			float triangulo = A*C/2f;
			System.out.println("a área do triângulo retângulo que tem A por base e C por altura: " + triangulo);
			
			
			
			System.out.println("a área do círculo de raio C. (pi = 3.14159)");
			
			
			
			float trapezio = A*B/C;
			System.out.println("a área do trapézio que tem A e B por bases e C por altura. ");
			
			
			
			float quadrado = B * B;
			System.out.println("a área do quadrado que tem lado B: " + quadrado);
			
			
			float retangulo = A*B;
			System.out.println(" a área do retângulo que tem lados A e B.");
			
	
		}
	}
}
