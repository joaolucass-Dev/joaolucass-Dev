	void total(Scanner sc, int count, double choice) {
		System.out.println("O total fica: " + count * choice);
		confirm();
	}
	
	void confirm(Scanner sc) {
		String process;
		System.out.println("Deseja prosseguir? s/n ");
		process = sc.next();
		if(process == "s") {
			System.out.println("Obg Pela Preferencia");
		}
		else if (process == "n"){
			System.out.println("Obg Pela Preferencia");
		}
		
	}
