import java.util.Locale;
import java.util.Scanner;

public class exercicio_Thirteen {
	public static void main(String[] args) {
		try(Scanner sc = new Scanner(System.in)){
			Locale.setDefault(Locale.US);
			System.out.println("Escolha um numero de 1 a 7: ");
			int week = sc.nextInt();
			if(week >= 1 && week <= 7) {
				switch (week) {
				case 1:
					System.out.println("Vc escolheu Domingo ");
					
					break;
				
				case 2:
					System.out.println("Vc escolheu Segunda feira ");
					break;
					
				case 3:
					System.out.println("Vc escolheu Terça feira ");
					break;
					
				case 4:
					System.out.println("Vc escolheu Quarta feira ");
					break;
					
				case 5:
					System.out.println("Vc escolheu Quinta feira ");
					break;
					
				case 6:
					System.out.println("Vc escolheu Sexta feira ");
					break;
					
				case 7:
					System.out.println("Vc escolheu Sábado");
					break;
				}
			}
			else {
				System.out.println("OPA!!! Vc escolheu um numero alto, por favor, refaça novamente!");
			}
		}
	}
}
