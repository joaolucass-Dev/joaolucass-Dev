import java.util.Locale;
import java.util.Scanner;

public class exercicio_Eight {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		try(Scanner sc = new Scanner(System.in)){
			double rest = 0;
			double rest8 = 0;
			double rest18 = 0;
			double rest28 = 0;
			double number;
			double isento = 0;
			double oito = 0;
			double dezoito = 0;
			double vinteoito = 0;
			double imposto;
			System.out.println("Valor para calcular o imposto de renda");
			number = sc.nextInt();
			
			if(number >= 0) {
				rest = number - 2000.00;
				System.out.println("rest" + rest);
			}
			if(rest >= 2000.01) {
				oito = (8/100) * 1000.00;
				rest8 = rest - 1000.00;
				System.out.println("rest8" + rest8);
			}
			if(rest8 >= 3000.01) {
				dezoito = (18/100) * 1500.00;
			}
			imposto = oito + dezoito + vinteoito;
			System.out.println("Valor a ser pago: " + imposto);
		}
	}
}
